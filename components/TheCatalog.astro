---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<TheSection name="catalog">
  <div class="catalog__header">
    <a href="tel:+79888888888" class="text-2xl">+7 988 888-88-88</a>
    <Button label="ЗАКАЗАТЬ ЗВОНОК" variant="outline" />
  </div>
  <H1>{title}</H1>
  <H2>ЭЛИТНЫХ ЧАСОВ</H2>

  <div class="catalog__content">
    <div class="catalog__filter">
      <div class="catalog__filter-group" id="filter-collection">
        <H5>Коллекция</H5>
        <ul class="text-lg">
          <li>Мужские</li>
          <li>Женские</li>
        </ul>
      </div>
      <div class="catalog__filter-group" id="filter-status">
        <H5>Состояние</H5>
        <ul class="text-lg">
          <li>Новые</li>
          <li>Б/У</li>
        </ul>
      </div>
      <div class="catalog__filter-group" id="filter-brand">
        <H5>Бренд</H5>
        <ul class="text-lg">
          <li><a href="/brand">A. LANGE & SOHNE</a></li>
          <li><a href="/brand1">AUDEMARS PIGUET</a></li>
          <li><a href="/brand2">BELL & ROSS</a></li>
          <li><a href="/brand3">BLANCPAIN</a></li>
          <li><a href="/brand4">BOVET</a></li>
          <li><a href="/brand5">BREGUET</a></li>
          <li><a href="/brand">A. LANGE & SOHNE</a></li>
          <li><a href="/brand">AUDEMARS PIGUET</a></li>
          <li><a href="/brand">BELL & ROSS</a></li>
          <li><a href="/brand">BLANCPAIN</a></li>
          <li><a href="/brand">BOVET</a></li>
          <li><a href="/brand">BREGUET</a></li>
        </ul>
      </div>
      <div class="catalog__filter-group" id="filter-price">
        <H5>Цена</H5>
        <div class="price-input">
          <input type="number" value="1000" />
          <input type="number" value="10000" />
        </div>
        <div class="range-slider">
          <input
            id="slider-min"
            type="range"
            min="0"
            max="100"
            value="0"
            step="0.0001"
          />
          <input
            id="slider-max"
            type="range"
            min="0"
            max="100"
            value="100"
            step="0.0001"
          />
        </div>
      </div>
    </div>
    <div class="catalog__products" id="catalog-products"></div>
  </div>
</TheSection>
