---
const images = [0, 1, 2, 3, 4];
---

<App title="Карточка часов">
  <!-- Page Header -->
  <ThePageHeader />
  <!-- Product -->
  <TheSection name="product">
    <Button type="link" to="/catalog" variant="back">
      <svg
        width="25"
        height="8"
        viewBox="0 0 25 8"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0.646447 3.64645C0.451184 3.84171 0.451184 4.15829 0.646447 4.35355L3.82843 7.53553C4.02369 7.7308 4.34027 7.7308 4.53553 7.53553C4.7308 7.34027 4.7308 7.02369 4.53553 6.82843L1.70711 4L4.53553 1.17157C4.7308 0.976311 4.7308 0.659728 4.53553 0.464466C4.34027 0.269204 4.02369 0.269204 3.82843 0.464466L0.646447 3.64645ZM25 3.5H1V4.5H25V3.5Z"
          fill="#010C17"></path>
      </svg>
      Вернуться в каталог
    </Button>
    <H1>ROLEX</H1>
    <H4>ROLEX ROLEX DAY-DATE 40 MM WHITE GOLD 228239-0007</H4>
    <div class="product__content">
      <div class="product__swiper">
        <div class="swiper__thumbs">
          <div class="btn-prev">
            <svg
              width="26"
              height="15"
              viewBox="0 0 26 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M24 13L13 2L2 13"
                stroke="#808080"
                stroke-width="3"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </div>
          <div class="swiper-thumbs">
            <div class="swiper-wrapper">
              {
                images.map((item) => (
                  <div class="swiper-slide">
                    <Img src="products/4.png" only />
                  </div>
                ))
              }
            </div>
          </div>
          <div class="btn-next">
            <svg
              width="26"
              height="15"
              viewBox="0 0 26 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M2 2L13 13L24 2"
                stroke="#808080"
                stroke-width="3"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </div>
        </div>
        <div class="swiper">
          <div class="swiper-wrapper">
            {
              images.map((item) => (
                <div
                  class="swiper-slide"
                  data-fancybox="product"
                  data-src="/assets/img/products/5.png"
                >
                  <Img src="products/5.png" only />
                </div>
              ))
            }
          </div>
        </div>
      </div>
      <div class="product__details">
        <H3 class="text-primary">3 888 000 Р</H3>
        <Button
          label="КУПИТЬ"
          variant="black"
          action="openPopup('form', 'КУПИТЬ')"
        />
        <Row>
          <ul>
            <li><div class="text-primary">Тип:</div> Классические</li>
            <li>
              <div class="text-primary">Материал корпуса:</div> 18-к белое золото
            </li>
            <li><div class="text-primary">Водонепроницаемость:</div> 100 м</li>
            <li><div class="text-primary">Диаметр корпуса:</div> 40 мм</li>
            <li><div class="text-primary">Стекло:</div> Сапфировое</li>
            <li><div class="text-primary">Цвет циферблата:</div> Синий</li>
            <li>
              <div class="text-primary">Тип механизма:</div> Автоматический
            </li>
            <li>
              <div class="text-primary">Функции:</div> Дата, часы, минуты, секунды,
              день недели
            </li>
            <li><div class="text-primary">Запас хода:</div> 70 часов</li>
          </ul>
          <ul>
            <li><div class="text-primary">Калибр:</div> 3255</li>
            <li>
              <div class="text-primary">Материал ремешка:</div> Браслет из белого
              золота 18к
            </li>
            <li>
              <div class="text-primary">Комплектация:</div> Полный комплект
            </li>
            <li><div class="text-primary">Состояние:</div> Как новые</li>
          </ul>
        </Row>
      </div>
    </div>
  </TheSection>
  <!-- Offer -->
  <TheOffer />
  <!-- Map -->
  <TheMap />
  <!-- Bg -->
  <TheSection name="bg " only>
    <Img src="bg.png" only />
  </TheSection>
</App>
